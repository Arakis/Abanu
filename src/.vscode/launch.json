	"version": "0.2.0",
	"configurations": [
		{
			"name": "Lonos.Loader",
			"type": "mono",
			"request": "launch",
			"program": "${workspaceRoot}/../bin/lonos.build.exe",
			"args": [
				"--image=loader",
			],
			"cwd": "${workspaceRoot}/../bin",
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Lonos.Kernel",
			"type": "mono",
			"request": "launch",
			"program": "${workspaceRoot}/../bin/lonos.build.exe",
			"args": [
				"--image=kernel",
			],
			"cwd": "${workspaceRoot}/../bin",
			"internalConsoleOptions": "openOnSessionStart"
		}
		/*
        {
            "name": "Attach",
            "type": "mono",
            "request": "attach",
            "address": "localhost",
            "port": 55555
        }
        */
	]
}
